serviceAccount:
  annotations:
    eks.amazonaws.com/role-arn: arn:aws:iam::{{ requiredEnv "AWS_ACCOUNT_ID" }}:role/karpenter-controller-eks
                                
settings:
  clusterName: notification-canada-ca-{{ .Environment.Name }}-eks-cluster

nodeClass:
  amiSelectorTerms:
    - id: {{ requiredEnv "EKS_KARPENTER_AMI_ID" }}

nodePool:
  instanceCPU: "['2', '4', '8']"
  capacityTypes: ["spot"]
